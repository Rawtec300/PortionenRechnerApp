<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_gramm_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gramm_alt"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/word_edit_gramm_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:importantForAutofill="no"
            tools:ignore="LabelFor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Portionenzahl_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/portionen_alt"
            android:textAlignment="center"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/word_edit_portionen_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Portionenzahl_neu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/portionen_neu"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/word_edit_portionen_neu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:importantForAutofill="no"
            tools:ignore="LabelFor"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_berechne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/berechne" />

</LinearLayout>