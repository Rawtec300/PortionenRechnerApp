<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_gramm_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ursprüngliche_grammzahl"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/word_edit_gramm_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:hint="@string/ursprüngliche_grammzahl_hint"
            android:importantForAutofill="no" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Portionenzahl_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ursprüngliche_portionenanzahl"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/word_edit_portionen_alt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:hint="@string/alte_portionenanzahl_hint"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_Portionenzahl_neu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/eingabe_portionen_neu"
            android:layout_weight="1"
            android:textSize="12sp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/word_edit_portionen_neu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/neue_portionenanzahl_hint"
            android:importantForAutofill="no"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/button_berechne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/berechne" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_berechne"
        android:text="Ergebnis"/>

    <Button
        android:id="@+id/button_hilfe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hilfe"/>

</LinearLayout>